{
  "manifest_version": 3,
  "name": "YouTubify",
  "version": "0.0.1",

  "description": "Transform YouTube into a music jukebox",
  "icons": {
    "16": "/icons/icon-16.png",
    "48": "/icons/icon-48.png",
    "128": "/icons/icon-128.png"
  },

  "author": "Ivan Consuegra",
  "content_scripts": [{
    "matches": ["https://*.youtube.com/*"],
    "css": ["style.css"]
  }]
}